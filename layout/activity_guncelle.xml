<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context=".guncelle_activity">

    //TextView
    //Metin değerlerini ekranda göstermek için kullanılır.

    <TextView
        android:id="@+id/guncelle_text_ad"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20sp"
        android:layout_gravity="center"
        ></TextView>

    <TextView
        android:id="@+id/guncelle_text_no"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:text="Phone number"
        android:textSize="20sp"
        android:layout_gravity="center"></TextView>

    <TextView
        android:id="@+id/guncelle_text_who"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:text="Relation"
        android:textSize="20sp"
        android:layout_gravity="center"></TextView>

    <EditText
        android:id="@+id/edit_guncelle_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edit_guncelle_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter phone number" />

    <EditText
        android:id="@+id/edit_guncelle_who"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter relationship" />

    <Button
        android:id="@+id/guncelle_btn"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_700"
        android:text="Update"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/sil_btn"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_700"
        android:text="Delete"
        android:layout_gravity="center" />

</LinearLayout>